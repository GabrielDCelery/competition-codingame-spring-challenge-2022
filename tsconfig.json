{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "temp",
    "dist",
    "cdk.out",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__mocks__",
    "**/__tests__",
    "**/__setup__"
  ]
}
